<?xml version="1.0" encoding="utf-8"?>
<ItemRenderer>
  <Data>
	<StateMachines>
		<StateMachine name="playerState">
			<States>
				<State name="Idle"/>
				<State name="Punch"/>
				<State name="ZombiePunch"/>
			</States>
			<Transitions>
				<Transition from="ZombiePunch|Punch" to="Idle" >
					<Condition>
						<IsAction operatorType="NotEqual">PUNCH</IsAction>
					</Condition>
				</Transition>
				<Transition from="ZombiePunch|Idle" to="Punch">
					<Condition type="and">
						<IsAction>PUNCH</IsAction>
						<IsZombified>false</IsZombified>
					</Condition>
				</Transition>
				<Transition from="Idle|Punch" to="ZombiePunch">
					<Condition type="and">
						<IsAction>PUNCH</IsAction>
						<IsZombified>true</IsZombified>
					</Condition>
				</Transition>
			</Transitions>
		</StateMachine>
	</StateMachines>
	<Sprite name="item_Sprite_1" fileName="game/elite_particles2.rttex" textureSize="64" frame="6,7"/>
	<Sprite name="particle_yellow" fileName="game/elite_particles_small1.rttex" textureSize="32" frame="7,1"/>
	<Animations>

		<SpriteAnimation name="wingFlexJump2" playOnAction="JUMP|FALL|IDLE|WALK" sprite="item_Sprite_1" animTime="2500" autoPlay="true" isLoop="true">
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>6,7</Frame>
			<Frame>7,7</Frame>
			<Frame>8,7</Frame>
			<Frame>9,7</Frame>
			<Frame>9,7</Frame>
			<Frame>9,7</Frame>
			<Frame>8,7</Frame>
			<Frame>7,7</Frame>
		</SpriteAnimation>
    </Animations>
	<ParticleSystems>
		<ParticleSystem name="yellow_slash_particle">
			<Emitter>
				<Set name="offset">0,-28</Set>
				<Set name="emissionInterval">0.25</Set>
				<Set name="lifeTime">0.25</Set>
				<Set name="particlesPerEmission">1</Set>
				<Set name="particlesToEmit">1</Set>
			</Emitter>
			<Particle>
				<Set name="sprite">particle_yellow</Set>
				<Set name="blendingMode">PREMULTIPLIED_ALPHA</Set>
				<Set name="lifeTime">0.4</Set>
				<Set name="rotateWithVelocity">true</Set>
				<Set name="interpolateAlpha">false</Set>
				<Set name="initialAlpha">1</Set>
				<Set name="finalAlpha">1</Set>
				<Set name="interpolateVelocity">true</Set>
				<Set name="initialScale">0.75,0.75</Set>
				<VectorTo name="initialVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
				<VectorTo name="finalVelocity" source="targetPos" duration="lifeTime" x="1" angle="0"/>
			</Particle>
		</ParticleSystem>
	</ParticleSystems>
  </Data>

  <RenderRules>
    <RenderHandItem>
	  <SpriteRender name="item_Sprite_1" rotateOffset="true" offset="9,-8" alignment="CENTER"/>
    </RenderHandItem>
	<OnPunchUpdate>
		<AvatarTransform class="Face">
			<Set name="face">MAD</Set>
		</AvatarTransform>
		<AvatarTransform class="ArmAngle">
			<Set name="armName">arm2Angle</Set>
			<Set name="armAngle">300</Set>
			<Set name="pointTowardsPunchTarget">true</Set>
		</AvatarTransform>
	</OnPunchUpdate>
	<OnPunchStart>
		<ParticleSystemUpdate name="yellow_slash_particle"/>
	</OnPunchStart>
	<SwitchOffClothingParticles>
		<ParticleSystemOff name="yellow_slash_particle"/>
	</SwitchOffClothingParticles>
  </RenderRules>
</ItemRenderer>